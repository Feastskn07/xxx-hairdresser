@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - XXX Hairdresser</title>
    <script type="importmap"></script>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Kuafor.Web.styles.css" asp-append-version="true" />
    <!-- Bootstrap & Icons (CDN) -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css" />
    <!-- Custom Styles -->
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    @RenderSection("Styles", required: false)
</head>
<body>
    <partial name="_Navbar" />
    <main class="py-4">
        @RenderBody()
    </main>
    <partial name="_Footer" />
    <!-- Modals -->
    <partial name="~/Views/Account/_LoginModal.cshtml"
             model="new Kuafor.Web.Models.Account.LoginViewModel()" />
    <partial name="~/Views/Account/_RegisterModal.cshtml"
             model="new Kuafor.Web.Models.Account.RegisterViewModel()" />
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @RenderSection("Scripts", required: false)
    @if (TempData["OpenModal"]?.ToString() == "Login")
    {
        <script>new bootstrap.Modal('#loginModal').show();</script>
    }
    else if (TempData["OpenModal"]?.ToString() == "Register")
    {
        <script>new bootstrap.Modal('#registerModal').show();</script>
    }
</body>
</html>
