@* Basit iskelet: sonra Identity/gerçek login ile bağlarız *@
<div class="modal fade show d-block" id="loginModal" tabindex="-1" aria-hidden="true">
  <div class="modal-dialog modal-dialog-centered">
    <div class="modal-content rounded-4 overflow-hidden">
      <div class="modal-header bg-gradient gap-2">
        <img src="~/images/logo.png" alt="Logo" class="brand-logo" />
        <h5 class="modal-title">Giriş Yap</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
      </div>
      <div class="modal-body">
        <form method="post" asp-controller="Account" asp-action="Login">
          <div class="outlined-group mb-3">
            <label class="outlined-label" @* asp-for="UserNameOrEmail" *@>Kullanıcı adı veya E-posta</label>
            <input class="form-control outlined-control" @* asp-for="UserNameOrEmail" *@ placeholder="Buraya yazınız..." />
            <span class="text-danger small" @* asp-validation-for="UserNameOrEmail" *@></span>
          </div>
          <div class="outlined-group mb-3">
            <label class="outlined-label" @* asp-for="Password" *@>Şifre</label>
            <input class="form-control outlined-control" @* asp-for="Password" *@ placeholder="Buraya yazınız..." type="password" />
            <span class="text-danger small" @* asp-validation-for="Password" *@></span>
          </div>
          <div class="d-flex justify-content-between align-items-center mb-3">
            <div class="form-check">
              <input class="form-check-input" type="checkbox" name="RememberMe" id="rememberMe">
              <label class="form-check-label" for="rememberMe">Beni hatırla</label>
            </div>
            <a class="small" href="#">Şifremi unuttum</a>
          </div>
          <button class="btn btn-primary w-100">Giriş Yap</button>
        </form>
      </div>
      <div class="modal-footer justify-content-between">
        <div class="small text-muted">Hesabın yok mu?</div>
        <button class="btn btn-outline-secondary" data-bs-target="#registerModal" data-bs-toggle="modal" data-bs-dismiss="modal">Kayıt Ol</button>
      </div>
    </div>
  </div>
</div>
