@model Kuafor.Web.Models.HomeViewModel
<section class="hero gradient-bg text-dark py-5">
  <div class="container">
    <div class="row align-items-center g-4">
      <div class="col-lg-7">
        <h1 class="display-5 fw-bold mb-3">Tarzını Keşfet</h1>
        <p class="lead mb-4">xxx-hairdresser’da sana özel kesim ve bakım.</p>
        @if (Model.IsAuthenticated)
        {
            <a class="btn btn-dark btn-lg" asp-controller="Randevu" asp-action="Olustur">
              Hemen Randevu Al
            </a>
        }
        else
        {
            <button class="btn btn-dark btn-lg" data-bs-toggle="modal" data-bs-target="#loginModal">
              Hemen Randevu Al
            </button>
        }
      </div>
      <div class="col-lg-5">
        <div class="hero-card shadow-sm p-4 bg-white rounded-4">
          <div class="d-flex align-items-center gap-3">
            <i class="bi bi-scissors fs-1"></i>
            <div>
              <div class="fw-bold">Hafta içi hızlı randevu</div>
              <div class="text-muted small">Yoğunluğa göre aynı gün</div>
            </div>
          </div>
          <hr />
          <div class="d-flex align-items-center gap-3">
            <i class="bi bi-person-check fs-1"></i>
            <div>
              <div class="fw-bold">Usta berber kadrosu</div>
              <div class="text-muted small">Yüksek memnuniyet</div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
